{
  "name": "@tylerbu/claude-cleaner",
  "version": "0.1.0",
  "description": "Remove Claude artifacts from Git repositories",
  "license": "MIT",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "deno run --allow-all src/main.ts",
    "build": "deno compile --allow-all --output claude-cleaner src/main.ts",
    "test": "deno test --allow-all",
    "test:run": "deno run --allow-all tests/run-all-tests.ts",
    "test:unit": "deno run --allow-all tests/run-all-tests.ts --unit-only",
    "test:integration": "deno run --allow-all tests/run-all-tests.ts --integration-only",
    "test:verbose": "deno run --allow-all tests/run-all-tests.ts --verbose",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/main.ts"
  },
  "imports": {
    "@cliffy/command": "jsr:@cliffy/command@^1.0.0-rc.7",
    "@cliffy/prompt": "jsr:@cliffy/prompt@^1.0.0-rc.7",
    "dax": "jsr:@david/dax@^0.42.0",
    "@std/assert": "jsr:@std/assert@^1.0.10",
    "@std/testing": "jsr:@std/testing@^1.0.7",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/fs": "jsr:@std/fs@^1.0.8",
    "@std/io": "jsr:@std/io@^0.225.0",
    "@std/cli": "jsr:@std/cli@^1.0.10"
  },
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["tests/**/*.test.ts", "src/**/*.test.ts"],
    "exclude": ["tests/fixtures/**/*"]
  }
}
