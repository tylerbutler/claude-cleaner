{
  "name": "claude-cleaner",
  "version": "0.1.0",
  "description": "Remove Claude artifacts from Git repositories",
  "license": "MIT",
  "exports": "./src/main.ts",
  "tasks": {
    "dev": "deno run --allow-all src/main.ts",
    "build": "deno compile --allow-all --output claude-cleaner src/main.ts",
    "test": "deno test --allow-all",
    "test:run": "deno run --allow-all tests/run-all-tests.ts",
    "test:unit": "deno run --allow-all tests/run-all-tests.ts --unit-only",
    "test:integration": "deno run --allow-all tests/run-all-tests.ts --integration-only",
    "test:verbose": "deno run --allow-all tests/run-all-tests.ts --verbose",
    "fmt": "deno fmt",
    "lint": "deno lint",
    "check": "deno check src/main.ts"
  },
  "imports": {
    "@cliffy/command": "https://deno.land/x/cliffy@v1.0.0-rc.4/command/mod.ts",
    "@cliffy/prompt": "https://deno.land/x/cliffy@v1.0.0-rc.4/prompt/mod.ts",
    "dax": "https://deno.land/x/dax@0.39.2/mod.ts",
    "@std/assert": "https://deno.land/std@0.217.0/assert/mod.ts",
    "@std/testing": "https://deno.land/std@0.217.0/testing/mod.ts",
    "@std/path": "https://deno.land/std@0.217.0/path/mod.ts",
    "@std/fs": "https://deno.land/std@0.217.0/fs/mod.ts",
    "@std/io": "https://deno.land/std@0.217.0/io/mod.ts",
    "@std/cli": "https://deno.land/std@0.217.0/cli/mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "verbatimModuleSyntax": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "test": {
    "include": ["tests/**/*.test.ts", "src/**/*.test.ts"],
    "exclude": ["tests/fixtures/**/*"]
  }
}
